<src:視窗繼承
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarbWareERP.B.基本資料"
        xmlns:src="clr-namespace:DarbWareERP.繼承窗口"
          xmlns:控制項="clr-namespace:DarbWareERP.控制項" xmlns:導覽區="clr-namespace:DarbWareERP.控制項.導覽區"
        xmlns:指令區="clr-namespace:DarbWareERP.控制項.指令區" x:Class="DarbWareERP.B.基本資料.單位轉換表"
        mc:Ignorable="d" Height="768" Width="1024" Tag="單位轉換表" KeyFldValue="單位成本">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="259*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="3" Grid.Row="1">
            <Border.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionColorKey}}"/>
            </Border.BorderBrush>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="195"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <控制項:命令區塊 HorizontalAlignment="Left" Width="100" Grid.Column="0"/>
                <導覽區:導覽區 VerticalAlignment="Top" Width="245" Grid.Column="1"/>
                <指令區:指令區 Grid.Column="3" Width="195"/>
                <指令區:查詢區 Grid.Column="2" VerticalAlignment="Top" Height="210"/>
            </Grid>
        </Border>



    </Grid>
</src:視窗繼承>
