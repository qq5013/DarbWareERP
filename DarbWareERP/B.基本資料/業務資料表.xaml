<src:視窗繼承
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarbWareERP.B.基本資料"
        xmlns:src="clr-namespace:DarbWareERP.繼承窗口"  
        xmlns:控制項="clr-namespace:DarbWareERP.控制項" xmlns:數據庫連線="clr-namespace:數據庫連線;assembly=數據庫連線" x:Class="DarbWareERP.B.基本資料.業務資料表"
        mc:Ignorable="d"
        Title="業務資料表" Height="768" Width="1024" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="266*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <控制項:命令區塊 HorizontalAlignment="Left" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderThickness="5" Width="105" Grid.Row="1" Margin="0,0,0,0.4"/>
        <Grid HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="1" Width="230">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="textBlock" Margin="3" TextWrapping="Wrap" Text="B.基本資料" FontSize="18.667" Grid.Row="0" Grid.ColumnSpan="3"/>
            <Button x:Name="btn1" Content="基本資料表" Margin="3" Grid.Column="0" Grid.Row="1"/>
            <Button x:Name="btn2" Content="2" Margin="3" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="btn3" Content="3" Margin="3" Grid.Column="2" Grid.Row="1"/>
            <Button x:Name="btn4" Content="4" Margin="3" Grid.Column="0" Grid.Row="2"/>
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderThickness="3" Grid.ColumnSpan="3" Margin="0" Grid.RowSpan="6"/>
        </Grid>
        <控制項:導覽區按鈕 x:Name="導覽區按鈕" Content="導覽鈕" HorizontalAlignment="Left"  Margin="359,415,0,0" VerticalAlignment="Top"/>
        

    </Grid>
</src:視窗繼承>
