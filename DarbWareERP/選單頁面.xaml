                <Button x:Name="button10" Content="J.品質管理" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
                <Button x:Name="button11" Content="K.成本管理" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
                <Button x:Name="button12" Content="L.聯絡傳訊" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
