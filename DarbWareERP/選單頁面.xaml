                <Button x:Name="button2" Content="B.基本資料" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
                <Button x:Name="button3" Content="C.總務管理" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
                <Button x:Name="button4" Content="D.工程資料" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
                <Button x:Name="button5" Content="E.營業收款" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" Margin="3"/>
