<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DarbWareERP.繼承窗口"
                    xmlns:B="clr-namespace:DarbWareERP.B.基本資料"
                    xmlns:Base="clr-namespace:DarbWareERP"
                    xmlns:data="clr-namespace:DarbWareERP.轉資料">

    <Style x:Key="IconAndTitle" TargetType="Window">
        <Setter Property="Icon" Value="/DarbWareERP;component/Image/Icon_png/EARTH.ICO"></Setter>
        <!--<Setter Property="Title" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Tag, StringFormat=DarbWareERP System 2016/02/19 {0}}"></Setter>--> 
        <Setter Property="Title" Value="DarbWareERP System 2016/03/15"></Setter>
        <Setter Property="WindowState" Value="Maximized"></Setter>
        <Setter Property="Background" Value="Gray"></Setter>        
    </Style>       
    
    <Style TargetType="{x:Type Base:主視窗 }" BasedOn="{StaticResource  IconAndTitle}"/>
    <!--<Style TargetType="{x:Type Base:登入視窗 }" BasedOn="{StaticResource  IconAndTitle}"/>    
    <Style TargetType="{x:Type Base:選單 }" BasedOn="{StaticResource  IconAndTitle}"/>    
    <Style TargetType="{x:Type data:轉Accl}" BasedOn="{StaticResource  IconAndTitle}"/>
    <Style TargetType="{x:Type data:轉Sliy}" BasedOn="{StaticResource  IconAndTitle}"/>-->    
</ResourceDictionary>